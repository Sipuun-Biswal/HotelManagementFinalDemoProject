@model IEnumerable<HotelManagementCoreMvcFrontend.Models.Room>

@{
    ViewData["Title"] = "GetRoomsByHotel";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
<!-- DataTables CSS for Bootstrap 5 -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
<h3 text-primary mt-4">Available Rooms</h3>

<div class="container mt-4">
    <table id="roomTable" class="table table-bordered table-striped table-hover">
        <thead class="thead-dark">
            <tr class="text-center">
                <th class="text-center">Room Number</th>
                <th class="text-center">Price (₹)</th>
                <th class="text-center">Book</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@Html.DisplayFor(modelItem => item.RoomNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>
                        @Html.ActionLink("Book", "CreateBooking", "Booking", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
  
        <script>
            $(document).ready(function () {
            $('#roomTable').DataTable({
                    "pageLength": 5,
                    "lengthMenu": [5, 10, 25, 50],
                    "columnDefs": [
                        { "orderable": false, "targets": [-1] }
                    ],
                    "dom": '<"top"f>rt<"bottom"lp><"clear">'
                });
            });
        </script>
    
}
<style>
    .table thead th {
        background-color: #000;
        color: white;
        text-align: center;
    }

    .table tbody td {
        vertical-align: middle;
        text-align: center;
    }

    .img-thumbnail {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        
    }
</style>
