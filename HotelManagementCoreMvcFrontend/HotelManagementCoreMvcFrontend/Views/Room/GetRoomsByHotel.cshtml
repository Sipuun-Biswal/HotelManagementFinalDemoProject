@model IEnumerable<HotelManagementCoreMvcFrontend.Models.Room>

@{
    ViewData["Title"] = "GetRoomsByHotel";
}

<h3 class="text-center text-primary mt-4">Available Rooms</h3>

<table class="table table-bordered table-hover mt-4">
    <thead class="thead-dark">
        <tr>
            <th>Room Number</th>
            <th>Price (₹)</th>
            <!-- IsAvailable column is hidden, but still usable in code -->
            <th>Book</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.RoomNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>

                <td>
                    @Html.ActionLink("Book", "CreateBooking", "Booking", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

