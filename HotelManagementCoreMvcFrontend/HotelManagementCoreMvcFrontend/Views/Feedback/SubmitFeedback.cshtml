@model HotelManagementCoreMvcFrontend.Models.Feedback

@{
    ViewData["Title"] = "Submit Feedback";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh; background-color: #f8f9fa;">
    <div class="col-md-8 col-lg-6">
        <!-- Increased the size of the form -->
        <div class="card shadow">
            <div class="card-header text-center">
                <h4>Submit Feedback</h4>
            </div>
            <div class="card-body">
                <form asp-action="SubmitFeedback">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="FeedbackText" class="control-label">FeedBack<span class="text-danger">*</span></label>
                        <textarea asp-for="FeedbackText" class="form-control" rows="4" placeholder="Enter your feedback"></textarea>
                        <span asp-validation-for="FeedbackText" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Rating" class="control-label"></label>
                        <div class="star-rating">
                            <input type="radio" id="star5" name="Rating" value="5" />
                            <label for="star5" title="5 stars">&#9733;</label>
                            <input type="radio" id="star4" name="Rating" value="4" />
                            <label for="star4" title="4 stars">&#9733;</label>
                            <input type="radio" id="star3" name="Rating" value="3" />
                            <label for="star3" title="3 stars">&#9733;</label>
                            <input type="radio" id="star2" name="Rating" value="2" />
                            <label for="star2" title="2 stars">&#9733;</label>
                            <input type="radio" id="star1" name="Rating" value="1" />
                            <label for="star1" title="1 star">&#9733;</label>
                        </div>
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Styling for the card and form size */
        .card {
            border-radius: 10px;
            background-color: white;
        }

        /* Increased form size */
        .col-md-8.col-lg-6 {
            max-width: 600px; /* Controls the width of the form */
        }

        /* Star Rating */
        .star-rating {
            direction: rtl;
            display: inline-block;
            font-size: 2.5em; /* Increased size of stars */
            color: #ddd; /* Default gray color */
        }

            .star-rating input {
                display: none;
            }

            .star-rating label {
                cursor: pointer;
                color: #ddd; /* Default color when not selected */
                text-shadow: 1px 1px 0 #bfbf00;
            }

            .star-rating input:checked ~ label {
                color: #ffc107; /* Yellow color when a star is selected */
            }

            .star-rating label:hover, .star-rating label:hover ~ label {
                color: #ffc107; /* Change color to yellow on hover */
            }

            .star-rating input:checked + label,
            .star-rating input:checked + label ~ label {
                color: #ffc107; /* Maintain yellow color for selected stars */
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
