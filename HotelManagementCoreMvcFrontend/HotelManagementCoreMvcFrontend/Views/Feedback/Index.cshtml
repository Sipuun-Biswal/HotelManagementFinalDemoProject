@inject IHttpContextAccessor HttpContextAccessor
@model IEnumerable<HotelManagementCoreMvcFrontend.Models.Feedback>

@{
    ViewData["Title"] = "Feedback Index";
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
}

<h1 class="text-center">Feedback Index</h1>

<div class="container">
  
    <div class="table-responsive">
        <table id="feedbackTable" class="table table-striped table-hover table-bordered">
        <thead class="table-light">
            <tr>
                    <th>Hotel Name</th>
                    <th>Room No</th>
                    <th>Feedback</th>
                    <th>Rating</th>
                    <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.HotelName)</td>
                    <td>@Html.DisplayFor(modelItem => item.RoomNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.FeedbackText)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                    <td>
                        @if (role == "Admin")
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#feedbackTable').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "pageLength": 5,
                "lengthMenu": [5, 10, 25, 50],
                        "columnDefs": [
                    { "orderable": false, "targets": [-1] }
                ], 
                "dom": '<"top"f>rt<"bottom"lp><"clear">'
            });
        });
    </script>
}